<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TableRow android:layout_width="match_parent">
		<TextView android:textSize="12sp" android:text="date"
			android:layout_weight="3" android:id="@+id/date"
			android:layout_height="35dp" android:paddingTop="12dp"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:layout_width="200dp"></TextView>

		<TextView android:id="@+id/value" android:layout_width="100dp"
			android:layout_weight="2" android:paddingLeft="3dp"
			android:paddingRight="3dp" android:layout_height="35dp"
			android:paddingTop="12dp" android:text="value" android:textSize="20sp" />
	</TableRow>

</TableLayout>
